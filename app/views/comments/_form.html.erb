<%= form_for [@job, Comment.new] do |form| %>
  <div class="mb-3">
    <%= form.label :name, class:"form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :body, class:"form-label" %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Send" %>
  </div>
<% end %>